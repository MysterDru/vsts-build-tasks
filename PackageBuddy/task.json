{
  "id": "4badaec0-9ac4-11e6-be05-e764cec342d0",
  "name": "PackageBuddy",
  "friendlyName": "Mobile Package Buddy",
  "description": "Easily update package id and version information in your android & iOS apps.",
  "author": "hello@drewfrisk.com",
  "helpMarkDown": "",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "2",
    "Patch": "8"
  },
  "minimumAgentVersion": "1.96.0",
  "instanceNameFormat": "PackageBuddy $(message)",
  "inputs": [
    {
      "name": "cwd",
      "type": "filePath",
      "label": "Working Directory",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Current working directory when PackageBuddy is run."
    },
    {
      "name": "projectPath",
      "type": "filePath",
      "label": "ProjectPath",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Project (.csproj) to your Android or iOS project."
    },
    {
      "name": "platform",
      "type": "pickList",
      "label": "Platform",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Platform type.",
      "options": {
          "android": "android",
          "ios": "ios"
      }
    },
    {
      "name": "packageName",
      "type": "string",
      "label": "Package Name",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "packageName for AndroidManifest.xml"
    },
    {
      "name": "versionCode",
      "type": "string",
      "label": "Version Code",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "versionName for AndroidManifest.xml"
    },
      {
      "name": "versionName",
      "type": "string",
      "label": "Version Name",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "versionName for AndroidManifest.xml"
    }
  ],
  "execution": {
    "Node": {
      "target": "packageBuddy.js",
      "argumentFormat": ""
    }
  }
}