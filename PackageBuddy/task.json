{
  "id": "684ba4d0-6bfb-11e6-8203-3d981036fc7d",
  "name": "PackageBuddy",
  "friendlyName": "Package Buddy",
  "description": "Easily update package id and version information in your android & iOS apps.",
  "author": "hello@drewfrisk.com",
  "helpMarkDown": "Replace with markdown to show in help",
  "category": "Utility",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "14"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "PackageBuddy $(message)",
  "inputs": [
    {
      "name": "cwd",
      "type": "filePath",
      "label": "Working Directory",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Current working directory when PackageBuddy is run."
    },
    {
      "name": "projectPath",
      "type": "filePath",
      "label": "ProjectPath",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Project (.csproj) to your Android or iOS project."
    },
    {
      "name": "platform",
      "type": "string",
      "label": "Platform",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Platform type. android or ios"
    },
    {
      "name": "packageName",
      "type": "string",
      "label": "Package Name",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "packageName for AndroidManifest.xml"
    },
    {
      "name": "versionCode",
      "type": "string",
      "label": "Version Code",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "versionName for AndroidManifest.xml"
    },
      {
      "name": "versionName",
      "type": "string",
      "label": "Version Name",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "versionName for AndroidManifest.xml"
    }
  ],
  "execution": {
    "Node": {
      "target": "packageBuddy.js",
      "argumentFormat": ""
    },
    "PowerShell3": {
      "target": "packageBuddy.ps1"
    }
  }
}